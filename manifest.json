{
  "manifest_version": 3,
  "name": "GritShot AI",
  "version": "0.0.1",
  "description": "Drop Screenshot and Ask AI",

  "permissions": [
    "storage",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],

  "action": {
    "default_title": "Drop Screenshot and Ask AI",
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },

  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },

  "commands": {
    "execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open the Preview popup"
    }
  }
}