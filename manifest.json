{
  "manifest_version": 3,
  "name": "Screenshot Preview + OpenAI",
  "version": "1.0.0",
  "description": "Paste a system screenshot (Cmd+Shift+5) then send to OpenAI Vision with your prompt. Test connection in-app.",
  "action": {
    "default_title": "Preview + OpenAI",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open the Preview popup"
    }
  },
  "options_page": "options.html"
}